// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  name          String
  last_name     String
  email         String
  password      String
  DeliveryLocal DeliveryLocal?
  PurchaseData  PurchaseData?
  ShopCart      ShopCart?
}

model DeliveryLocal {
  id         Int    @id @default(autoincrement())
  userId     Int    @unique
  user       User   @relation(fields: [userId], references: [id])
  way        String
  complement String
  cep        String
}

model PurchaseData {
  id          Int    @id @default(autoincrement())
  userId      Int    @unique
  user        User   @relation(fields: [userId], references: [id])
  name        String
  lastName    String
  credit_card String
  document    String
}

model ShopCart {
  id             Int    @id @default(autoincrement())
  userId         Int    @unique
  user           User   @relation(fields: [userId], references: [id])
  product_name   String
  product_amount Int
  product_price  String
}
